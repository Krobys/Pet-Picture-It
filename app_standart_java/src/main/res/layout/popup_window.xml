<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PopUpCustom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TitlePopUpCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="@string/two_modes_more_perks" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTitleClose"
                    style="@style/TitlePopUpCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/close" />

                <TextView
                    android:id="@+id/textViewDescriptionClose"
                    style="@style/DescriptionPopUpCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/meet_people_naround_you" />
            </LinearLayout>

            <io.ghyeok.stickyswitch.widget.StickySwitch
                android:id="@+id/switch_popup_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ss_animationDuration="300"
                app:ss_animationType="line"
                app:ss_iconPadding="8dp"
                app:ss_iconSize="17dp"
                app:ss_leftIcon="@drawable/close_icon_meet"
                app:ss_rightIcon="@drawable/far_icon_meet"
                app:ss_selectedTextSize="14sp"
                app:ss_sliderBackgroundColor="@color/colorDeepPurple50"
                app:ss_switchColor="@color/colorPrimary"
                app:ss_textSize="12sp"
                app:ss_textVisibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTitleFar"
                    style="@style/TitlePopUpCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/far" />

                <TextView
                    android:id="@+id/textViewDescriptionFar"
                    style="@style/DescriptionPopUpCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/flirt_with_nanyone_widely" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_popup_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/button_state_popup_accept"
            android:text="@string/ok_got_it"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>