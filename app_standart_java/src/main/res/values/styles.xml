<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/medium_startup_leaf</item>
    </style>

    <style name="ButtonMaterialCustom" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_state</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="EditTextMaterialCustom" parent="Widget.AppCompat.EditText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBlueText</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/colorBlack</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/shape_edittext</item>
    </style>

    <style name="AnimationPopUpCustom">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="PopUpCustom">
        <item name="android:background">@drawable/shape_dialog</item>
        <item name="android:colorBackground">@color/colorDeepPurple50</item>
    </style>

    <style name="TitlePopUpCustom">
        <item name="android:textColor">@color/colorActiveTextPopUp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">1.24sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionPopUpCustom">
        <item name="android:textColor">@color/colorActiveTextPopUp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">1.27sp</item>
        <item name="android:letterSpacing">0.006</item>
    </style>
</resources>
