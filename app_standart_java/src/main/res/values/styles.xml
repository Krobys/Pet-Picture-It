<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/medium_startup_leaf</item>
    </style>

    <style name="ButtonMaterialCustom" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_state</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="EditTextMaterialCustom" parent="Widget.AppCompat.EditText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBlueText</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/colorBlack</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/shape_edittext</item>
    </style>

    <style name="SwitchMaterialCustom" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ProgressBarCustom" parent="Widget.AppCompat.ProgressBar">
        <item name="android:foreground">@color/colorPrimary</item>
    </style>

</resources>
